<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <mao.com.flexibleflowlayout.TagFlowLayout
        android:id="@+id/tag_fl"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/dp_8"
        android:paddingStart="@dimen/dp_8"
        >

    </mao.com.flexibleflowlayout.TagFlowLayout>

    <Button
        android:id="@+id/bt_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="只展示"
        app:layout_constraintTop_toBottomOf="@id/tag_fl"
        app:layout_constraintLeft_toLeftOf="parent"
        />

    <Button
        android:id="@+id/bt_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="单选"
        app:layout_constraintLeft_toRightOf="@id/bt_1"
        app:layout_constraintTop_toBottomOf="@id/tag_fl" />
    <Button
        android:id="@+id/bt_3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="多选"
        app:layout_constraintLeft_toRightOf="@id/bt_2"
        app:layout_constraintTop_toBottomOf="@id/tag_fl" />

    <Button
        android:id="@+id/bt_4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="刷新数据"
        app:layout_constraintLeft_toRightOf="@id/bt_3"
        app:layout_constraintTop_toBottomOf="@id/tag_fl" />

</android.support.constraint.ConstraintLayout>